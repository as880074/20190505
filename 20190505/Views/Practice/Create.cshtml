@model _20190505.Models.tToDo

@{
    ViewBag.Title = "待辦事項新增";
}

<h2>待辦事項新增</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label class="control-label col-md-2">標題</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.fTitle, new { htmlAttributes = new { @class = "form-control",type = "TextBox", required = "required" } })
                @Html.ValidationMessageFor(m => m.fTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">圖示</label>
            <div class="col-md-10">
                <select id="fImage" name="fImage" class="form-control">
                    <option value="0.png">普通</option>
                    <option value="1.png">重要</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">日期</label>
            <div class="col-md-10">
                @Html.EditorFor(m => m.fDate, new { htmlAttributes = new { @class = "form-control" ,type = "date",required= "required" } })
                @Html.ValidationMessageFor(m => m.fDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

