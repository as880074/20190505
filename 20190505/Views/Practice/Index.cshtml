@model IEnumerable<_20190505.Models.tToDo>

@{
    ViewBag.Title = "待辦事項";
}

<h2>待辦事項</h2>

<p>
    @Html.ActionLink("新增項目", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            標題
        </th>
        <th>
            圖示
        </th>
        <th>
            結案日
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.fld
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fTitle)
        </td>
        <td>
            <image src="~/images/@item.flmage" width ="32"></image>
        </td>
        <td>
            @String.Format("{0:d}", @item.fDate)
           @* @Html.DisplayFor(modelItem => item.fDate)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.fld }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.fld }, new { onclick = "return confirm('確定要刪除嗎？')" })
        </td>
    </tr>
}

</table>
